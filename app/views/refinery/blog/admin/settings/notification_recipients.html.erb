<%= form_tag refinery.notification_recipients_blog_admin_blog_settings_path(@blog.id) do %>

  <div class='field'>
    <span class='label_with_help'>
      <%= label_tag :recipients, t('.value') %>
    </span>
    <%= text_field_tag :recipients, @recipients, :class => "larger widest" %>
  </div>

  <p>
    <%= t('.hint') %>
  </p>
  <p>
    <%= t('.example') %>
  </p>

  <%= render "/refinery/admin/form_actions",
             :f => nil,
             :continue_editing => false,
             :cancel_url => refinery.blog_admin_blog_posts_url(@blog),
             :hide_delete => true %>
<% end %>
